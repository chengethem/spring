{
  "apps": [
    {
      "name": "torch",
      "script": "server/index.js",
      "instances": 1,
      "merge_logs": true,
      "watch": true,
      "ignore_watch": [
        "public",
        "src"
      ],
      "out_file": "/dev/null",
      "env": {
        "NODE_ENV": "development"
      },
      "max_memory_restart": "300M"
    }
  ]
}